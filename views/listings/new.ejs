<%- layout('/layouts/boilerplate') %>

<!-- Responsive New Listing Form -->
<div class="container-fluid px-2 px-md-3 px-lg-4 mt-3">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 pb-0">
                    <h3 class="card-title mb-0 text-center">
                        <i class="fa-solid fa-plus-circle me-2 text-primary"></i>Create New Listing
                    </h3>
                </div>
                <div class="card-body p-3 p-md-4">
                    <form  
                        action="/listings" 
                        method="post" 
                        class="needs-validation" 
                        novalidate
                        enctype="multipart/form-data"
                    >
                        <div class="mb-3">
                            <label for="title" class="form-label fw-semibold">Title</label>
                            <input 
                                class="form-control" 
                                name="listing[title]" 
                                placeholder="Add a catchy title for your listing" 
                                type="text"
                                required
                            >
                            <div class="valid-feedback">
                                Title looks good!
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="description" class="form-label fw-semibold">Description</label>
                            <textarea 
                                class="form-control" 
                                name="listing[description]"
                                placeholder="Describe your listing in detail..."
                                rows="4"
                                required
                            ></textarea>
                            <div class="valid-feedback">
                                Description looks good!
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="image" class="form-label fw-semibold">Upload Listing Image</label>
                            <input 
                                class="form-control" 
                                name="listing[image]" 
                                type="file"
                                accept="image/*"
                                required
                            >
                            <div class="form-text">Choose a high-quality image for your listing</div>
                            <div class="valid-feedback">
                                Image looks good!
                            </div>
                        </div>
                        
                        <div class="row g-3">
                            <div class="col-12 col-sm-6">
                                <label for="price" class="form-label fw-semibold">Price (â‚¹)</label>
                                <input 
                                    class="form-control" 
                                    name="listing[price]" 
                                    placeholder="1200" 
                                    type="number"
                                    min="0"
                                    step="0.01"
                                    required
                                >
                                <div class="invalid-feedback">
                                    Enter a valid price!
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <label for="country" class="form-label fw-semibold">Country</label>
                                <input 
                                    class="form-control" 
                                    name="listing[country]" 
                                    placeholder="India" 
                                    type="text"
                                    required
                                >
                                <div class="invalid-feedback">
                                    Enter a country!
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="location" class="form-label fw-semibold">Location</label>
                            <input
                                class="form-control"  
                                name="listing[location]" 
                                placeholder="Jaipur, Rajasthan" 
                                type="text"
                                required
                            >
                            <div class="invalid-feedback">
                                Enter a location!
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button class="btn btn-dark add-btn btn-lg" type="submit">
                                <i class="fa-solid fa-plus me-2"></i>Create Listing
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>