<style>
  .search-btn {
    background-color: #fe424d ;
    color: white;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d ;
    color: white;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid px-3 px-md-4 px-lg-5">
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <i class="fa-regular fa-compass me-2"></i>
      <span class="d-none d-sm-inline">StayHive</span>
    </a>
    
    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Left side navigation -->
      <div class="navbar-nav me-auto">
        <a class="nav-link px-2" href="/listings">Explore</a>
      </div>
      
      <!-- Search form - responsive -->
      <div class="navbar-nav me-auto me-lg-0">
        <form class="d-flex flex-grow-1 flex-lg-grow-0" role="search" method="get" action="/listings/search">
          <div class="input-group">
            <input 
              class="form-control search-input" 
              name="city"
              type="search" 
              placeholder="Search destinations" 
              aria-label="Search"
            />
            <button class="btn search-btn" type="submit">
              <i class="fa-solid fa-magnifying-glass d-none d-sm-inline me-1"></i>
              <span class="d-none d-sm-inline">Search</span>
              <i class="fa-solid fa-magnifying-glass d-sm-none"></i>
            </button>
          </div>
        </form>
      </div>
      
      <!-- Right side navigation -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link px-2" href="/listings/new">StayHive your home</a>
        <% if(!currUser) { %>
          <a class="nav-link px-2" href="/signup"><b>Sign up</b></a>
          <a class="nav-link px-2" href="/login"><b>Log in</b></a>
        <% }%>
        <% if(currUser) { %>
          <a class="nav-link px-2" href="/logout"><b>Log out</b></a>
        <% }%>
      </div>
    </div>
  </div>
</nav>
